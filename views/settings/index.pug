doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Настройки сервиса
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css")
    style.
      body {
        background: linear-gradient(160deg, #eef2ff 0%, #f8fafc 45%, #ffffff 100%);
        min-height: 100vh;
      }
      .settings-layout {
        max-width: 1200px;
      }
      .settings-toolbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 2rem;
      }
      .settings-toolbar .btn-back {
        display: inline-flex;
        align-items: center;
        border-radius: 999px;
        padding: 0.5rem 1.25rem;
        background: rgba(15, 23, 42, 0.06);
        border: none;
        color: #1f2937;
        transition: background 0.2s ease, transform 0.2s ease;
      }
      .settings-toolbar .btn-back:hover,
      .settings-toolbar .btn-back:focus {
        background: rgba(15, 23, 42, 0.12);
        text-decoration: none;
        transform: translateX(-2px);
        color: #111827;
      }
      .settings-hero {
        position: relative;
        overflow: hidden;
        background: radial-gradient(circle at top right, rgba(79, 70, 229, 0.92), rgba(59, 130, 246, 0.85));
        border-radius: 28px;
        padding: 2.75rem 3rem;
        margin-bottom: 2.75rem;
        color: #fff;
        box-shadow: 0 28px 60px rgba(59, 130, 246, 0.22);
      }
      .settings-hero::after {
        content: '';
        position: absolute;
        width: 320px;
        height: 320px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.12);
        top: -100px;
        right: -70px;
      }
      .settings-hero::before {
        content: '';
        position: absolute;
        width: 220px;
        height: 220px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.08);
        bottom: -80px;
        left: -60px;
      }
      .settings-hero h1 {
        position: relative;
        z-index: 1;
        font-weight: 600;
        margin-bottom: 0.75rem;
      }
      .settings-hero p {
        position: relative;
        z-index: 1;
        max-width: 560px;
        margin-bottom: 0;
        font-size: 1.05rem;
      }
      .settings-shell {
        display: flex;
        gap: 2rem;
      }
      .settings-nav {
        flex: 0 0 240px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 22px;
        padding: 1.5rem;
        box-shadow: 0 18px 44px rgba(148, 163, 184, 0.22);
        border: 1px solid rgba(148, 163, 184, 0.16);
      }
      .settings-nav h2 {
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: #64748b;
        margin-bottom: 1rem;
      }
      .settings-nav a {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        border-radius: 14px;
        padding: 0.75rem 0.9rem;
        color: #1f2937;
        font-weight: 500;
        transition: background 0.2s ease, transform 0.2s ease, color 0.2s ease;
      }
      .settings-nav a:hover,
      .settings-nav a:focus {
        text-decoration: none;
        background: rgba(59, 130, 246, 0.08);
        color: #1d4ed8;
      }
      .settings-nav a.active {
        background: linear-gradient(120deg, rgba(59, 130, 246, 0.16), rgba(59, 130, 246, 0.28));
        color: #1d4ed8;
        box-shadow: inset 0 0 0 1px rgba(59, 130, 246, 0.22);
      }
      .settings-panel {
        flex: 1 1 auto;
        min-width: 0;
      }
      .settings-section .panel-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 24px;
        border: 1px solid rgba(148, 163, 184, 0.18);
        box-shadow: 0 24px 60px rgba(148, 163, 184, 0.28);
        margin-bottom: 2rem;
      }
      .panel-card .panel-header {
        padding: 1.5rem 2rem;
        border-bottom: 1px solid rgba(226, 232, 240, 0.7);
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
      .panel-card .panel-header h2 {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 600;
        color: #0f172a;
      }
      .panel-card .panel-body {
        padding: 2rem;
      }
      .panel-card .panel-footer {
        padding: 1.5rem 2rem;
        border-top: 1px solid rgba(226, 232, 240, 0.7);
        background: rgba(248, 250, 252, 0.8);
        border-radius: 0 0 24px 24px;
      }
      .status-tag {
        border-radius: 999px;
        padding: 0.35rem 0.75rem;
        font-size: 0.8rem;
        font-weight: 600;
      }
      @media (max-width: 991.98px) {
        .settings-shell {
          flex-direction: column;
        }
        .settings-nav {
          flex: none;
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
          gap: 0.5rem;
        }
        .settings-nav h2 {
          grid-column: 1 / -1;
        }
      }
  body
    .container.py-5.settings-layout
      .settings-toolbar
        a.btn-back(href="/" data-report-link)
          i.bi.bi-arrow-left-short.mr-2
          | Назад на главную
        if successMessage
          .alert.alert-success.mb-0.rounded-pill.px-4.py-2.shadow-sm= successMessage
        else if errorMessage
          .alert.alert-danger.mb-0.rounded-pill.px-4.py-2.shadow-sm= errorMessage
      .settings-hero
        h1 Настройки рабочего пространства
        p Централизованный центр управления: источники SalesDrive, планировщик статического отчёта и контроль доступа всегда под рукой.
      .settings-shell
        nav.settings-nav
          h2 Разделы
          a(class=activeTab === 'sources' ? 'active' : '', href='?tab=sources')
            i.bi.bi-collection-play-fill
            span Управление источниками
          a(class=activeTab === 'scheduler' ? 'active' : '', href='?tab=scheduler')
            i.bi.bi-calendar3-event
            span Планировщик статического отчёта
          a(class=activeTab === 'access' ? 'active' : '', href='?tab=access')
            i.bi.bi-shield-lock
            span Доступ по паролю
        .settings-panel
          if activeTab === 'scheduler'
            include ../partials/settings/scheduler.pug
          else if activeTab === 'access'
            include ../partials/settings/access.pug
          else
            include ../partials/settings/sources.pug
    +simpleLoadingOverlay({ id: 'settingsSimpleOverlay' })
    - const overlayMeta = typeof reportOverlayMeta !== 'undefined' ? reportOverlayMeta : {}
    +reportLoadingOverlay(overlayMeta, { id: 'settingsOverlay' })
    script.
      document.addEventListener('DOMContentLoaded', function () {
        var enabledSwitch = document.getElementById('schedule-enabled');
        var weekdaySelect = document.getElementById('schedule-weekday');
        var dailyRadio = document.getElementById('schedule-daily');
        var weeklyRadio = document.getElementById('schedule-weekly');
        var rangeLast = document.getElementById('range-last');
        var rangeCount = document.getElementById('range-count');
        if (enabledSwitch && weekdaySelect && dailyRadio && weeklyRadio) {
          var toggleFrequency = function () {
            weekdaySelect.disabled = !weeklyRadio.checked;
          };
          dailyRadio.addEventListener('change', toggleFrequency);
          weeklyRadio.addEventListener('change', toggleFrequency);
          toggleFrequency();
        }
        if (rangeLast && rangeCount) {
          var toggleRange = function () {
            rangeCount.disabled = !rangeLast.checked;
          };
          document.querySelectorAll('input[name="rangeType"]').forEach(function (input) {
            input.addEventListener('change', toggleRange);
          });
          toggleRange();
        }
        var accessSwitch = document.getElementById('settingsAccessEnabled');
        var newPass = document.getElementById('settingsNewPassword');
        var confirmPass = document.getElementById('settingsConfirmPassword');
        if (accessSwitch && newPass && confirmPass) {
          var accessForm = accessSwitch.closest('form');
          var hasExisting = accessForm && accessForm.getAttribute('data-has-existing') === 'true';
          var syncAccess = function () {
            var enabled = accessSwitch.checked;
            newPass.disabled = !enabled;
            confirmPass.disabled = !enabled;
            if (!enabled) {
              newPass.value = '';
              confirmPass.value = '';
              newPass.required = false;
              confirmPass.required = false;
              return;
            }
            var filled = newPass.value.trim().length > 0 || confirmPass.value.trim().length > 0;
            if (!hasExisting || filled) {
              newPass.required = true;
              confirmPass.required = true;
            } else {
              newPass.required = false;
              confirmPass.required = false;
            }
          };
          accessSwitch.addEventListener('change', syncAccess);
          newPass.addEventListener('input', syncAccess);
          confirmPass.addEventListener('input', syncAccess);
          syncAccess();
        }
      });
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
