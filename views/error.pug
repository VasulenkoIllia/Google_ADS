doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Error
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
  body
    .container
      h1.my-4.text-danger Error
      .alert.alert-danger
        p= message
        if source
          p.text-muted.mb-2
            strong Джерело:&nbsp;
            span= source
        if error && error.stack
          pre
            code= error.stack
